<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_alignRight="@id/title"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="@dimen/card_image_height"
                android:paddingBottom="@dimen/image_padding"
                android:paddingTop="@dimen/image_padding"
                android:paddingRight="@dimen/image_padding"
                android:paddingLeft="@dimen/image_padding"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_text_paddingleft"
                android:paddingTop="@dimen/card_text_paddingtop"
                android:textColor="@color/card_name"
                android:textSize="@dimen/card_text_size" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>